<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.webservice.activity.LoginPage">
    <TextView
        android:id="@+id/textview_result"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:fontFamily="italic"
        android:text="RESULT: "
        android:textAllCaps="false"
        android:textColor="#111111"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:inputType="text"
            android:id="@+id/editText_firstNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter First Number"/>

        <EditText
            android:inputType="text"
            android:id="@+id/editText_secondNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Second Number"/>

        <EditText
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:id="@+id/editText_operation"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:hint="Enter operation symbole" />

        <Button
            android:background="#a30313"
            android:layout_marginTop="15dp"
            android:id="@+id/btn_calculate"
            android:layout_marginLeft="75dp"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:textColor="#FFFFFF"
            android:text="CALCULATE"
            />

    </LinearLayout>
</RelativeLayout>
